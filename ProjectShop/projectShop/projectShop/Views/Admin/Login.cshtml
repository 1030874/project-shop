@model projectShop.Models.Account
@{
    ViewBag.Title = "Login";
}



@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Brugerlogin</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.acc_name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.acc_name)
            @Html.ValidationMessageFor(model => model.acc_name)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.acc_pass)
        </div>
        <div class="editor-field">
            @Html.PasswordFor(model => model.acc_pass)
            @Html.ValidationMessageFor(model => model.acc_pass)
        </div>

        <p>
            <input type="submit" value="Log ind" />
        </p>
    </fieldset>
}