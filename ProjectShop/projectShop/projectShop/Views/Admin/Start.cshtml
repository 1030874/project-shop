            <br />
            <i class="fa fa-shopping-cart fa fa-4x"></i>
            <div class="caption">
                <h3>Produktkatalog</h3>
                <p>Gå til produktkatalog</p>
                <p>
                   

                    <div class="btn btn-default">
                        @Html.ActionLink("Opret produkt", "Create", "Produkt")
                    </div>

                    <div class="btn btn-default">
                        @Html.ActionLink("Se produktkatalog", "Index", "Produkt")
