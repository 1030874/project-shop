
@{
    ViewBag.Title = "Start";
}

   <!-- Title -->
<div class="row">
    <div class="col-lg-12">
        <h3>Admin panel</h3>
    </div>
</div>
<!-- /.row -->
<!-- Page Features -->
<div class="row text-center">

    <div class="col-md-4 col-sm-6 ">
        <div class="thumbnail">
            <br />
 <i class="fa fa-users fa fa-4x"></i>
            <div class="caption">
                <h3>Kundekartotek</h3>
                <p>Gå til kundekartotek</p>
                <p>
                    <div class="btn btn-default">
                        @Html.ActionLink("Opret kunde", "Create", "Kunde")
                    </div>

                    <div class="btn btn-default">
                        @Html.ActionLink("Se kundeliste", "Index", "Kunde")
                    </div>
                 
