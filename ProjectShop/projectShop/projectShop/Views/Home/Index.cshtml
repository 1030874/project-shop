@model IEnumerable<projectShop.Models.Product>

@{
    ViewBag.Title = "Index";
}



<!-- Title -->
<div class="row">
    <div class="col-lg-12">
        <h3>Nyeste produkter</h3>
    </div>
</div>
<!-- /.row -->
<!-- Page Features -->
<div class="row text-center">

    @foreach (var item in Model)
    {

        <div class="col-md-3 col-sm-6 produktspace">
            <div class="thumbnail">
                @*<img src="@Url.Content("~/Images/" + item.product_image)" />*@
                <img src="http://placehold.it/800x500" alt="">
                <div class="caption">
                    <h3>@Html.DisplayFor(modelItem => item.product_name)</h3>
                    <p>@Html.DisplayFor(modelItem => item.product_description)</p>
                    <p>
                        @Html.ActionLink("Se produktet", "ViewProduct", new { id = item.id }, new { @class = "btn btn-default" })

                        @*<a href="#" class="btn btn-default">Se produkt</a>*@


                    </p>

                </div>

            </div>
        </div>

    }






</div>
<!-- /.row -->
<!-- Page Features -->
