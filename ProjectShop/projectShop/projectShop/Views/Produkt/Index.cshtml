@model IEnumerable<projectShop.Models.Product>

@{
    ViewBag.Title = "Produktkatalog";
}

<h2>Produktkatalog</h2>

<p>
    @Html.ActionLink("Tilbage", "Start", "Admin")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.product_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.product_price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.product_description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.product_image)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.product_category)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.product_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.product_price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.product_description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.product_image)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.product_category)
        </td>
        <td>
            @Html.ActionLink("Rediger", "Edit", new { id=item.id }) |
            @Html.ActionLink("Detaljer", "Details", new { id=item.id }) |
            @Html.ActionLink("Slet", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>
